<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF7676"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/noText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="wrap"/>

    <TextView
        android:id="@+id/noText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF7676"
        android:gravity="center"
        android:padding="5dp"
        android:text="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameText"
        app:layout_constraintStart_toEndOf="@+id/checkBox2" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="Apple"
        app:layout_constraintEnd_toStartOf="@+id/tickerText"
        app:layout_constraintStart_toEndOf="@+id/noText" />

    <TextView
        android:id="@+id/tickerText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="AAPL"
        app:layout_constraintEnd_toStartOf="@+id/closeText"
        app:layout_constraintStart_toEndOf="@+id/nameText"
        />

    <TextView
        android:id="@+id/closeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="290.12"
        app:layout_constraintEnd_toStartOf="@+id/highText"
        app:layout_constraintStart_toEndOf="@+id/tickerText" />

    <TextView
        android:id="@+id/highText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="301.21"
        app:layout_constraintEnd_toStartOf="@+id/lowText"
        app:layout_constraintStart_toEndOf="@+id/closeText"
        />

    <TextView
        android:id="@+id/lowText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="289.11"
        app:layout_constraintEnd_toStartOf="@+id/volumeText"
        app:layout_constraintStart_toEndOf="@+id/highText" />

    <TextView
        android:id="@+id/volumeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:background="#FF7676"
        android:gravity="center"
        android:text="301022"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lowText" />

</androidx.constraintlayout.widget.ConstraintLayout>